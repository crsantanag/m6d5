<%= form_with(model: [offer, postulation], url: offer_postulations_path(offer), method: :post, local: true) do |form| %>

  <div class="my-2 w-100 ">
    <div class="field my-2 ">
      <%= form.label :message, "Mensaje para postulación" %>
      <br>
      <%= form.text_area :message, autofocus: true, required: true, class: "ps-2 w-100 border border-2 rounded-2 border-secondary-subtle", rows: 3 %>
    </div>
  </div>

  <% if current_user.curriculum? && current_user.image.attached? %>
    <div class = "actions">
      <%= form.submit "Postular", class: "btn btn-primary my-0", style: "width:100px" %>
    </div>
  <% else %>
     <p class="bg-danger text-white text-center py-2"><strong>PARA POSTULAR DEBE INGRESAR CURRÍCULO VITAE Y FOTO EN SU PERFIL</strong></p>
  <% end %>

<% end %>
