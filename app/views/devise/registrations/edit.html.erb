<h2>Editar cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
  <% if resource.errors.any? %>
    <div id="error_explanation" data-turbo-cache="false" style="color: red">
      <div id="error_explanation">
        <h2><%= resource.errors.count %> Error(es)! No es posible actualizar usuario debido a:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, readonly: true, autocomplete: "email", class: "ps-2 col-11 col-md-6 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(Deje este campo en blanco si no quiere cambiar su password)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "ps-2 col-7 col-md-3 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
    <% if @minimum_password_length %>
      <br />
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar password", class: "ps-2 col-7 col-md-3 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <div class="my-2">
    <%= f.label :name, "Nombre", class: "col-6" %>
      <br>
    <%= f.text_field :name,  autofocus: true, placeholder: "Name", required: true, class: "ps-2 col-11 col-md-6 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <div class="my-2">
    <%= f.label :phone, "Teléfono", class: "col-6" %><br>
    <%= f.text_field :phone, required: true, class: "ps-2 col-7 col-md-3  border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <div class="my-2">
    <%= f.label :curriculum, "Curriculum" %><br />
    <%= f.text_area :curriculum, required: true, autocomplete: "curriculum", class: "ps-2 col-11 col-md-6 border border-2 rounded-2 border-secondary-subtle", rows: 3 %>
  </div>

  <div class="d-md-flex col-11 col-md-6 my-2 align-items-start border border-2 border-secondary-subtle rounded">

      <div class="my-2 ms-2"> 
          <% if current_user.image.attached? %>
              <%= image_tag current_user.image, class: "img-fluid border border-1 border-secondary-subtle rounded", style: "max-width: 70px; max-height: 70px; width: 100%; height: auto;" if current_user.image.attached? %>
          <% end %>
      </div>

      <div class="ms-md-3 my-2">
        <%= f.label :image, "Foto - Relación 1:1 - Tamaño máx 1 Mb" %>
        <br>
        <div class="d-flex align-items-center">
          <%= f.file_field :image, class: "ps-2 py-1 col-12 border border-2 border-secondary-subtle rounded", style:"height: 40px" %>
        </div>
      </div>
      <br>

  </div>

  <div class="field">
    <%= f.label :current_password %> <i>( se requiere su password actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mb-2 ps-2 col-7 col-md-3 border border-2 border-secondary-subtle rounded", style:"height: 35px" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", class: "btn btn-secondary col-5 col-md-2 mt-2" %>
  </div>
<% end %>

<div class="mt-3">No está contento? <%= button_to "Cerrar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mb-3 ps-2 col-5 col-md-2 btn btn-danger", style:"height: 35px" %></div>
