
    <nav class="px-2 px-md-10 mx-0 navbar bg-white bg-opacity-100 navbar-expand-lg bg-body-tertiary fixed-top border-top border-bottom border-2 border-info" style="height: 90px">
        <div class="container-fluid">

            <strong> <%= link_to "ALGORITMO",
                            root_path,
                            class: "navbar-brand",
                            data: { bs_toggle: "tooltip", bs_placement: "bottom" },
                            title: "Ir a la página de inicio" %> </strong>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if user_signed_in? %>
                    <li class="nav-item ">
                        <%= link_to "Ver ofertas",
                                offers_path,
                                class:"nav-link btn btn-light fs-5 me-3 border border-2 rounded-2 border-secondary-subtle",
                                data: { bs_toggle: "tooltip", bs_placement: "bottom" },
                                title: "Ir a ver ofertas de trabajo" %>
                    </li>
                    <% if current_user.normal? %>
                        <li class="nav-item">
                            <%= link_to "Ver mis postulaciones ".html_safe + "<span class='top-0 badge rounded-pill bg-danger'> + #{@postulations.count} </span>".html_safe,
                                postulations_path,
                                class:"nav-link btn btn-light fs-5 me-3 border border-2 rounded-2 border-secondary-subtle",
                                data: { bs_toggle: "tooltip", bs_placement: "bottom" },
                                title: "Ir a ver mis postulaciones" %>
                        </li>

                    <% end %>
                    <% if ( current_user.owner? ||  current_user.admin?) %> 
                        <li class="nav-item">
                            <%= link_to "Ver postulaciones",
                                contest_offers_path,
                                class:"nav-link btn btn-light fs-5 me-3 border border-2 rounded-2 border-secondary-subtle",
                                data: { bs_toggle: "tooltip", bs_placement: "bottom" },
                                title: "Ver todas las postulaciones" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to "Crear oferta cargo",
                                new_offer_path,
                                class:"nav-link btn btn-light fs-5 me-3 border border-2 rounded-2 border-secondary-subtle",
