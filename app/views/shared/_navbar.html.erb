                        <%= button_to "Cerrar sesión", destroy_user_session_path, class: "btn btn-secondary", method: :delete %>
                    <% else %>
                        <div>
                            <%= link_to "Iniciar sesión", new_user_session_path,   class: "btn btn-secondary" %>
