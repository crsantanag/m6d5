                    <% if user_signed_in? %>
                        <% if current_user.picture.attached? %>
                            <div class="d-flex justify-content-center d-none d-md-block">
                            <%= image_tag current_user.picture, class: "img-fluid rounded-circle mx-2", style: "max-width: 70px; max-height: 70px; width: 100%; height: auto;" %>
                            </div>
                        <% end %>

                        <% if current_user.name.present? %>
                            <span class="text-dark fs-4"></span> <%= link_to current_user.name, edit_user_registration_path(@user),  class: "ms-2 me-2 btn btn-primary" %>
                        <% else %>
                            <span class="text-dark fs-4 mx-2"><%= link_to current_user.email, edit_user_registration_path(@user),  class: "ms-2 me-2 btn btn-primary" %> </span> 
                        <% end %>


